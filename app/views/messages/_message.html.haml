.message-box
  .user-info 
    .user-info__post-name
    = message.user.name
    .user-info__post-date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  - if message.content
    .message
      .message__content
      = message.content
    - if message.image.present?
      =  image_tag message.image.url